<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>
<%- messages() %>
<% if (errors) { %>
    <ul class="warning">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
<%  }) %>
    </ul>
<% } %>
<h2>Account Update</h2>
<form action="/account/update" method="post" id="updateForm" class="form">
    <label for="account_firstname">First Name:</label>
    <input type="text" name="account_firstname" id="account_firstname" required value="<%= locals.account_firstname %>">
    <br><br>
    <label for="account_lastname">Last Name:</label>
    <input type="text" name="account_lastname" id="account_lastname" required value="<%= locals.account_lastname %>">
    <br><br>
    <label for="account_email">Email:</label>
    <input type="email" name="account_email" id="account_email" required value="<%= locals.account_email %>">
    <button type="submit" disabled>Update</button>
    <input type="hidden" name="account_id"
    <% if(locals.account_id) { %> value="<%= locals.account_id %>"
    <% } %>>
</form>
<h2>Change Password</h2>
<form action="/account/updatepassword" method="post" id="updateForm" class="form">
    <div><p>Password must meet requirements: 12 characters minimum, at least 1 capital letter, 1 number, and 1 special character</p></div>
    <label for="account_password">New Password:</label>
    <input type="password" name="account_password" id="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <span id="pswdBtn">Show Password</span>
    <br><br>
    <div><p>By submitting this form, you will change your password, the old password will become invalid</p></div>
    <button type="submit" >Change Password</button>
    <input type="hidden" name="account_id"
    <% if(locals.account_id) { %> value="<%= locals.account_id %>"
    <% } %>>
</form>

<script src="/js/inv-update.js"></script>
<script src="/js/script.js"></script>