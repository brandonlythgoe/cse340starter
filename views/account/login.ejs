<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    <%- messages() %>
    <% if (errors) { %>
        <ul class="warning">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
    <%  }) %>
        </ul>
    <% } %>
    <form id="loginForm" action="/account/login" method="post" class="form">
        <label for="account_email">Email:</label>
        <input type="email" name="account_email" id="account_email" required value="<%= locals.account_email %>">
        <br><br>
        <label for="account_password">Password:</label>
        <input type="password" name="account_password" id="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <div><p>Password must meet requirements: 12 characters minimum, at least 1 capital letter, 1 number, and 1 special character</p></div>
        <span id="pswdBtn">Show Password</span>
        <button type="submit">Login</button>
        <p>No account? <a href="/account/register">Sign-up</a></p>
    </form>
    <script src="../../js/script.js"></script>
