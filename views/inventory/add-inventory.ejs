<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    <%- messages() %>
    <% if (errors) { %>
        <ul class="warning">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
    <%  }) %>
        </ul>
    <% } %>
    <form action="/inv/inventory" method="post" class="form">
        <p>All Fields are Required</p>
        <label for="inv_make">Vehicle Make</label>
        <input type="text" name="inv_make" id="inv_make" placeholder="Ford" required value="<%= locals.inv_make %>">
    
        <label for="inv_model">Vehicle Model</label>
        <input type="text" name="inv_model" id="inv_model" placeholder="Mustang" required value="<%= locals.inv_model %>">
    
        <label for="inv_year">Vehicle Year</label>
        <input type="number" name="inv_year" id="inv_year" placeholder="1956" required value="<%= locals.inv_year %>">
    
        <label for="inv_description">Vehicle Description</label>
        <textarea name="inv_description" id="inv_description" placeholder=" Vehicle Description" required><%= locals.inv_description %></textarea>
    
        <label for="inv_image">Vehicle Image</label>
        <input type="text" name="inv_image" id="inv_image" value="/images/vehicles/no-image.png" pattern=".*\.(jpg|jpeg|png|webp)$" required>
    
        <label for="inv_thumbnail">Vehicle Thumbnail</label>
        <input type="text" name="inv_thumbnail" id="inv_thumbnail" value="/images/vehicles/no-image-tn.png" pattern=".*\.(jpg|jpeg|png|webp)$" required>
    
        <label for="inv_price">Vehicle Price</label>
        <input type="number" name="inv_price" id="inv_price" placeholder="27000" required value="<%= locals.inv_price %>">
    
        <label for="inv_miles">Vehicle Miles</label>
        <input type="number" name="inv_miles" id="inv_miles" placeholder="12000" required value="<%= locals.inv_miles %>">
    
        <label for="inv_color">Vehicle Color</label>
        <input type="text" name="inv_color" id="inv_color" placeholder="Yellow" required value="<%= locals.inv_color %>">
    
        <label for="classification_id">Vehicle Classification</label>
        <%- locals.dropdown %>
       
        <button type="submit">Submit</button>
    </form>